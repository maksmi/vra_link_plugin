{
  "name": "VRA linker",
  "version": "0.3",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "description": "VRA linker",
  "icons": {
    "256": "main-icon-2.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "VRA linker",
    "default_popup": "popup.html",
    "style_css": "style.css",
    "javascript": "popup.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "contextMenus",
    "webNavigation",
    "storage"
  ]
}